# Telegram
TELEGRAM_BOT_TOKEN=your_bot_token_here
TELEGRAM_ALLOWED_USERS=123456789,987654321

# Provider API Keys (comma-separated for round-robin)
GEMINI_API_KEYS=key1,key2,key3
GROQ_API_KEYS=key1,key2
MISTRAL_API_KEYS=key1

# Default provider: gemini, groq, or mistral
DEFAULT_PROVIDER=gemini

# Agent settings
MAX_AGENT_TURNS=10
MAX_QUEUE_DEPTH=3

# System tools (bash, read, write, glob, grep)
# WARNING: Enables shell access — only enable for trusted users!
ENABLE_SYSTEM_TOOLS=false
WORKING_DIR=.
BASH_TIMEOUT=120

# Google OAuth (for Gmail + Sheets tools, optional)
GMAIL_CLIENT_ID=
GMAIL_CLIENT_SECRET=
GMAIL_REFRESH_TOKEN=

# Claude Code (tmux-based control)
# WARNING: Enables Claude Code CLI control via tmux — requires tmux and claude CLI installed
ENABLE_CLAUDE_CODE=false
CLAUDE_CODE_PATH=claude
CC_TIMEOUT=300

# Logging
RUST_LOG=info
